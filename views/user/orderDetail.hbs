{{>header}}
<div class="container" style="padding-top:20px; padding-bottom:30px">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-1"></div>
            <div class="col-md-10">
                <div class="card bg-light">
                    <div class="card-header card-header-danger">
                        <h4 class="card-title font-weight-bold text-center">Order Detail</h4>
                        <p class="card-category text-center">View all information in Order</p>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="font-weight-bold">Order Date:</label>
                                    <h5>{{orderDetail.orderDate}}</h5>
                                </div>
                            </div>
                        </div>
                        {{#each orderDetail.orderList}}
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="bmd-label-floating" style="white-space: nowrap">Departure:
                                        {{this.departure}}</label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="bmd-label-floating" style="white-space: nowrap">Destination:
                                        {{this.destination}}</label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="bmd-label-floating" style="white-space: nowrap">Departure date:
                                        {{this.departDate}}</label>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="bmd-label-floating">Seat's quantity: {{this.totalQuantity}}</label>

                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="bmd-label-floating">Seat's code: {{this.seats}}</label>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="bmd-label-floating">Total price: {{this.totalPrice}} USD</label>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="bmd-label-floating">Customer Name:
                                        {{orderDetail.userInfo.name}}</label>

                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="bmd-label-floating">Email: 
                                        {{orderDetail.userInfo.email}}</label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="bmd-label-floating">User's phone:
                                        {{orderDetail.userInfo.phoneNum}}</label>


                                </div>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="bmd-label-floating">Address user:
                                        {{orderDetail.userInfo.address}},{{orderDetail.userInfo.district}},
                                        {{orderDetail.userInfo.city}},{{orderDetail.userInfo.country}}</label>

                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 d-flex justify-content-end">
                                <div class="form-group">
                                    <label class="bmd-label-floating font-weight-bold">Discount:
                                        {{orderDetail.couponCode.description}}</label>

                                </div>
                            </div>
                            <div class="col-md-6 d-flex justify-content-start">
                                <div class="form-group">
                                    <label class="bmd-label-floating font-weight-bold">Total Price:
                                        {{orderDetail.totalPrice}} USD
                                    </label>
                                </div>
                            </div>

                        </div>

                        <div class="row">
                            <div class="col-10">
                                {{!-- data-toggle="modal" data-target="#modelId" --}}
                                <form action="/user/deleteOrder" method="POST">
                                    {{!-- <input type="text" class="form-control" name="numberOrder" id="numberOrder"
                                            value="{{orderDetail.number}}" hidden="false"> --}}
                                    {{!-- <input type="text" class="form-control" name="arrPro" id="arrPro"
                                            value="{{#each arr_proId}}{{this}}-{{/each}}" hidden="false"> --}}
                                    <input type="text" class="form-control" name="arrPro" id="arrPro"
                                        value="{{arr_proDelet}}" hidden="false">
                                    <button type="submit" class="btn btn-danger pull-right">Delete</button>
                                </form>
                            </div>
                            <div class="col-2 text-left">
                                <a name="" id="" class="btn btn-secondary pull-right" href="/user/profile"
                                    role="button">Back to
                                    Profile</a>
                            </div>





                        </div>
                    </div>

                </div>


            </div>
            <div class="col-md-1"></div>
        </div>
    </div>
</div>
{{>footer}}


<!-- Button trigger modal -->


<!-- Modal -->
<div class="modal fade" id="modelId" tabindex="-1" role="dialog" aria-labelledby="modelTitleId" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Body
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>
</div>