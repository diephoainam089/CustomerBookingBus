    <script>
        $(document).ready(function () {
            $('.departChosen').chosen()
            $('.destinaChosen').chosen()
        })
    </script>
    <script type="text/javascript">

        var date = new Date();
        date.setDate(date.getDate());

        $('#departDate').datepicker({
            startDate: date,
            autoclose: true,
            todayHighlight: true
        });
    </script>
</body>