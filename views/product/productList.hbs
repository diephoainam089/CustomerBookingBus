                                    {{#each departures}}
                                    <option value="{{this}}">{{this}}</option>
                                    {{/each}}
                                </select>
                            </div>
                        </div>
                        <div class='col-md-3'>
                            <div class="form-group inputNoIcon">
                                <select class="destinaChosen custom_input_middle form-control" id="destination"
                                    name="destination">
                                    {{#each destinations}}
                                    <option value="{{this}}">{{this}}</option>
                                    {{/each}}
                                </select>
                            </div>
                        </div>
                        <div class='col-md-3'>
                            <div class='form-group inputWithIcon'>
