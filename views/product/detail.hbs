{{> header}}
<!-- breadcrumb -->
<div class="container">
    <div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
        <a href="/" class="stext-109 cl8 hov-cl1 trans-04">
            {{__ "Home"}}
            <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
        </a>

        <a href="/product/product-more" class="stext-109 cl8 hov-cl1 trans-04">
            {{__ "Trips"}}
            <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
        </a>

        <span class="stext-109 cl4">
            {{__ "Route" }}: {{proDetail._doc.title}} - {{proDetail._doc.to}}
        </span>
    </div>
</div>


<!-- Product Detail -->
<section class="sec-product-detail bg0 p-t-65 p-b-60">
    <div class="container">
        {{#proDetail}}
        <div class="row">
            <div class="col-md-4 col-lg-5 p-b-30">
                <div class="p-l-25 p-r-30 p-lr-0-lg">
                    <div class="wrap-slick3 flex-sb flex-w">
                        <div class="wrap-slick3-dots"></div>
                        <div class="wrap-slick3-arrows flex-sb-m flex-w"></div>

                        <div class="gallery-lb">
                            <div class="item-slick3" data-thumb="../../images/{{this._doc.imagePath}}">
                                <div class="wrap-pic-w pos-relative">
                                    <img src="../../images/{{this._doc.imagePath}}" alt="IMG-PRODUCT">

                                    <a class="flex-c-m size-108 how-pos1 bor0 fs-16 cl10 bg0 hov-btn3 trans-04"
                                        href="../../images/{{this._doc.imagePath}}">
                                        <i class="fa fa-expand"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8 col-lg-7 p-b-30">
                <div class="p-r-50 p-t-5 p-lr-0-lg">
                    <h3 class="">
                        {{this._doc.title}} {{__ "to"}} {{this._doc.to}}
                    </h3>
                    <p class="stext-102 cl3">
                        <span>{{__ "Bus ID"}}:</span> {{this._doc.codeBus}}
                    </p>
                    <p class="stext-102 cl3">
                        <span class="">{{__ "Description"}}:</span> {{this._doc.description}}
                    </p>
                    <h3 class="">
                        {{this._doc.price}} USD
                    </h3>
                    <!--  -->
                    <div class="p-t-33">
                        <form action="/cart/add-to-cart/{{this._doc._id}}" method="post">
                            <div class="flex-w flex-r-m p-b-10 form-group d-none">

                                <div class="size-204 respon6-next">
                                    <div class="rs1-select2 bor8 bg0">
                                        <select class="js-select2 form-control" id="size" name="size">

                                            <option value="S">Size S</option>
                                            <option value="M">Size M</option>
                                            <option value="L">Size L</option>
                                            <option value="XL">Size XL</option>
                                        </select>
                                        <div class="dropDownSelect2"></div>
                                    </div>
                                </div>
                            </div>

                            {{/proDetail}}
                            <div class="row">
                                <div class="col-12 noPadding">
                                    <label>Please choose your seats</label>
                                </div>
                            </div>
                            {{!-- <fieldset> --}}
                            {{!-- <input type="checkbox" name="favorite_pet" value="Cats">Cats<br>
                                <input type="checkbox" name="favorite_pet" value="Dogs">Dogs<br>
                                <input type="checkbox" name="favorite_pet" value="Birds">Birds<br>
                                <br>
                                <input type="submit" value="Submit now" />
                            </fieldset> --}}
                            <div class="row">
                                <div class="col-md-6">
                                    {{#each seatChunkSize}}
                                    <li class="row row--1">
                                        <ol class="seats" type="A">
                                            {{#each this}}
                                            <li class="seat">
                                                <input name="seat" type="checkbox" id="1A" value={{this.id}}
                                                    {{this.checked}} />
                                                <label for="">{{this.id}}</label>
                                            </li>
                                            {{/each}}
                                        </ol>
                                    </li>
                                    {{/each}}
                                </div>
                                <div class="col-md-6">
                                    <li class="row row--1">
                                        <ol class="seats text-center" type="A">
                                            <li class="seat">
                                                <label class="seat" style="height: 35px" for="">&ensp;</label>
                                                <span class="p-l-5 p-t-5"
                                                    style="white-space: nowrap">{{__ "Available"}}</span>
                                            </li>

                                        </ol>
                                    </li>
                                    <li class="row row--1">
                                        <ol class="seats text-center" type="A">
                                            <li class="seat">
                                                <label class="seat" style="height: 35px; background-color:#c7e175"
                                                    for="">&ensp;</label>
                                                <span class="p-l-5 p-t-5"
                                                    style="white-space: nowrap">{{__ "Selecting"}}</span>
                                            </li>

                                        </ol>
                                    </li>
                                    <li class="row row--1">
                                        <ol class="seats text-center" type="A">
                                            <li class="seat">
                                                <label class="seat"
                                                    style="height: 35px; background-color:black">&ensp;</label>
                                                <span class="p-l-5 p-t-5"
                                                    style="white-space: nowrap">{{__ "Reserved"}}</span>
                                            </li>

                                        </ol>
                                    </li>
                                </div>
                            </div>

                            <div class="wrapbtn p-t-20 text-right" style="margin-right: 160px">
                                <button type="submit" class="btn btn-outline-success btn-lg">
                                    {{__ "Next"}}
                                </button>
                            </div>

                    </div>
                </div>
                </form>
            </div>

            <!--  -->

        </div>
    </div>
    {{#proDetail}}
    <div class="p-b-40">
        <div class="container">
            <h4>{{__ "Reviews from user"}}
                â€¢ {{this._doc.reviews.length}} {{__ "reviews"}}</h4>


            <!-- Tab panes -->
            <div class="tab-content p-t-30">
                <!-- - -->
                <div class="">

                    <div class="row">
                        <div class="col-sm-10 col-md-8 col-lg-6">
                            <div class="p-b-30">

                                {{!-- <div class="flex-w flex-t p-b-68">
                                    <div class="wrap-pic-s size-109 bor0 of-hidden m-r-18 m-t-6">
                                        <img src="../../images/{{this._doc.imagePath}}" alt="AVATAR">
                                    </div>
                                    <div class="size-207">
                                        <div class="flex-w flex-sb-m p-b-17">
                                            <span class="mtext-107 cl2 p-r-20">
                                                <h2>{{this._doc.title}}</h2>
                                            </span>
                                            <span id="ratingStar" class="fs-18 cl11">
                                                <h2>{{this._doc.productRate}} <i class="zmdi zmdi-star"></i></h2>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                </br> --}}
                                <!-- Review -->
                                {{#each this._doc.reviews}}
                                <div class="flex-w flex-t p-b-68">
                                    <div class="wrap-pic-s size-109 bor0 of-hidden m-r-18 m-t-6">
                                        <img src="../../images/avatar.jpg" alt="AVATAR">
                                    </div>

                                    <div class="size-207">
                                        <div class="flex-w flex-sb-m p-b-17">
                                            <p class="mtext-107 cl2 p-r-20 ">
                                                {{this.userName}} <small class="stext-102 cl6">
                                                    {{__ "reviewed on"}} {{this.date_time}}</small>
                                            </p>


                                            <span id="ratingStar" class="fs-18 cl11">
                                                {{this.rating}}
                                                <i class="zmdi zmdi-star"></i>
                                                <i class="zmdi zmdi-star"></i>
                                                <i class="zmdi zmdi-star"></i>
                                                <i class="zmdi zmdi-star"></i>
                                                <i class="zmdi zmdi-star-half"></i>

                                            </span>
                                        </div>

                                        <p class="stext-102 cl6">
                                            {{this.description}}
                                        </p>
                                    </div>
                                </div>
                                {{/each}}
                                {{/proDetail}}
                                <!-- Add review -->
                                {{#if checkAcc}}
                                <form class="w-full" action="/product/review-product/{{proDetail._doc._id}}"
                                    method="post">
                                    <h5 class="mtext-108 cl2 p-b-7">
                                        Add a review - {{msg}}
                                    </h5>

                                    <p class="stext-102 cl6">
                                        Your email address will not be published. Required fields are marked *
                                    </p>

                                    <div class="flex-w flex-m p-t-50 p-b-23">
                                        <span class="stext-102 cl3 m-r-16">
                                            Your Rating
                                        </span>

                                        <span class="wrap-rating fs-18 cl11 pointer">
                                            <i class="item-rating pointer zmdi zmdi-star-outline"></i>
                                            <i class="item-rating pointer zmdi zmdi-star-outline"></i>
                                            <i class="item-rating pointer zmdi zmdi-star-outline"></i>
                                            <i class="item-rating pointer zmdi zmdi-star-outline"></i>
                                            <i class="item-rating pointer zmdi zmdi-star-outline"></i>
                                            <input class="dis-none" type="number" name="rating">
                                        </span>
                                    </div>

                                    <div class="row p-b-25">
                                        <div class="col-12 p-b-5">
                                            <label class="stext-102 cl3" for="review">Your review</label>
                                            <textarea class="size-110 bor8 stext-102 cl2 p-lr-20 p-tb-10" id="review"
                                                name="review" required></textarea>
                                        </div>

                                        {{!-- <div class="col-sm-6 p-b-5">
                                                <label class="stext-102 cl3" for="name">Name</label>
                                                <input class="size-111 bor8 stext-102 cl2 p-lr-20" id="name" type="text"
                                                    name="name">
                                            </div>

                                            <div class="col-sm-6 p-b-5">
                                                <label class="stext-102 cl3" for="email">Email</label>
                                                <input class="size-111 bor8 stext-102 cl2 p-lr-20" id="email"
                                                    type="text" name="email" required>
                                            </div> --}}
                                    </div>

                                    <button type="submit"
                                        class="flex-c-m stext-101 cl0 size-112 bg7 bor11 hov-btn3 p-lr-15 trans-04 m-b-10">
                                        Submit
                                    </button>
                                </form>
                                {{/if}}
                            </div>
                        </div>
                    </div>
                    {{!-- {{/proDetail}} --}}
                </div>
            </div>
        </div>
    </div>

    {{!-- <div class="bg6 flex-c-m flex-w size-302 m-t-73 p-tb-15">
            <span class="stext-107 cl6 p-lr-25">

            </span>

            <span class="stext-107 cl6 p-lr-25">

            </span>
        </div> --}}
</section>

